<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    tools:context=".GatekeeperRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chregistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"

                android:paddingRight="10dp"
                android:text="Gatekeeper's Registration"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:srcCompat="@drawable/jgiicon" />

        </LinearLayout>

        <EditText
            android:id="@+id/chname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/inpuut_bg"
            android:backgroundTint="#ECE4FB"
            android:drawableLeft="@drawable/ic_baseline_family_restroom_24"
            android:drawablePadding="5dp"
            android:hint="Name:"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"

            android:shadowColor="#FBFBFB"
            android:textAllCaps="false"
            android:textColor="#0A0B0B"
            android:textColorHighlight="#090909"
            android:textColorHint="#020202"
            android:textColorLink="#FAF3F3"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/registration"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="@+id/registration"
            app:layout_constraintTop_toBottomOf="@+id/registration" />

        <EditText
            android:id="@+id/chemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/inpuut_bg"
            android:backgroundTint="#ECE4FB"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Email of Gatekeepers"

            android:inputType="textPersonName|textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#423D3D"
            android:textColor="#0A0B0B"
            android:textColorHighlight="#090909"
            android:textColorHint="#020202"
            android:textColorLink="#FAF3F3"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/inputUsername"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/inputUsername"
            app:layout_constraintTop_toBottomOf="@+id/inputUsername" />


        <EditText
            android:id="@+id/chphoneno"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/inpuut_bg"
            android:backgroundTint="#ECE4FB"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Gatekeepers Contact No:"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#423D3D"
            android:textColor="#0A0B0B"
            android:textColorHighlight="#090909"
            android:textColorHint="#020202"
            android:textColorLink="#FAF3F3"

            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/inputEmail3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/inputEmail3"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail3" />


        <EditText
            android:id="@+id/cAddress"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/inpuut_bg"
            android:backgroundTint="#ECE4FB"
            android:drawableLeft="@drawable/ic_baseline_home_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Address:"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#423D3D"
            android:textColor="#0A0B0B"
            android:textColorHighlight="#090909"
            android:textColorHint="#020202"
            android:textColorLink="#FAF3F3"

            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/inputEmail3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/inputEmail3"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail3" />

        <EditText
            android:id="@+id/chpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/inpuut_bg"
            android:backgroundTint="#ECE4FB"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Password:"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#423D3D"
            android:textColor="#0A0B0B"
            android:textColorHighlight="#090909"
            android:textColorHint="#020202"
            android:textColorLink="#FAF3F3"

            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/inputUsn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/inputUsn"
            app:layout_constraintTop_toBottomOf="@+id/inputUsn" />

        <EditText
            android:id="@+id/chpassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/inpuut_bg"
            android:backgroundTint="#ECE4FB"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Confirm Password:"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#423D3D"
            android:textColor="#0A0B0B"
            android:textColorHighlight="#090909"
            android:textColorHint="#020202"
            android:textColorLink="#FAF3F3"

            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/chpassword"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chpassword"
            app:layout_constraintTop_toBottomOf="@+id/chassword" />


        <CheckBox
            android:id="@+id/checkBoxgr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="#EFEBF6"

            android:drawablePadding="5dp"
            android:text="Show Password"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_30sdp"
            android:visibility="invisible" />


        <Button
            android:id="@+id/chregister"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/inpuut_bg"
            android:text="REGISTER"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#EB5B1FAF" />

        <TextView
            android:id="@+id/chaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:paddingLeft="10dp"
            android:text="Already have an account?"
            android:textColor="@color/colorBlack"

            android:textColorHint="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/preg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/preg"
            app:layout_constraintTop_toBottomOf="@+id/preg"
            app:layout_constraintVertical_bias="0.409" />

    </LinearLayout>


</RelativeLayout>