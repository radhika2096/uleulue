<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GatekeeperLogin">

    <EditText
        android:id="@+id/Cemail"
        android:layout_width="306dp"
        android:layout_height="58dp"

        android:layout_marginTop="28dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_login_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorBlack"
        android:textColorHighlight="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textColorLink="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/cLogin3"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/cLogin3"
        app:layout_constraintTop_toBottomOf="@+id/cLogin3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cLogin3"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="619dp"
        android:text="GUARDS LOG IN"
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clogin"
        android:layout_width="232dp"
        android:layout_height="49dp"

        android:layout_marginTop="32dp"
        android:background="@drawable/inpuut_bg"

        android:text="LOG IN"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@+id/cPassword3"
        app:layout_constraintStart_toStartOf="@+id/cPassword3"
        app:layout_constraintTop_toBottomOf="@+id/cPassword3"
        app:rippleColor="@color/colorRed" />

    <TextView
        android:id="@+id/cforgotPassword"
        android:layout_width="190dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="@color/colorBlack"
        android:text="Forgot Password?"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cregister2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cregister2"
        app:layout_constraintTop_toBottomOf="@+id/cregister2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cregister2"
        android:layout_width="217dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Dont have an Account?"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cprogressBar3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/cprogressBar3"
        app:layout_constraintTop_toBottomOf="@+id/cprogressBar3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/cPassword3"
        android:layout_width="306dp"
        android:layout_height="58dp"

        android:layout_marginTop="28dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textColorLink="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/Cemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Cemail"
        app:layout_constraintTop_toBottomOf="@+id/Cemail" />

    <ProgressBar
        android:id="@+id/cprogressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginTop="28dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/clogin"
        app:layout_constraintStart_toStartOf="@+id/clogin"
        app:layout_constraintTop_toBottomOf="@+id/clogin" />

    <CheckBox
        android:id="@+id/remember4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="379dp" />
</androidx.constraintlayout.widget.ConstraintLayout>