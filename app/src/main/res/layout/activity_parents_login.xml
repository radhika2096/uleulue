<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3F3"
    tools:context=".ParentsLogin">

    <CheckBox
        android:id="@+id/remember7"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="9dp"
        android:text="remember me"
        android:textColor="#090909"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin7"
        app:layout_constraintEnd_toEndOf="@+id/inputPassword7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputPassword7"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword7"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/inputEmail7"
        android:layout_width="318dp"
        android:layout_height="68dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_login_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="#131313"
        android:textColor="#0B0A0A"
        android:textColorHighlight="#0B0A0A"
        android:textColorHint="@color/colorBlack"
        android:textColorLink="#1B1A1A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/inputPassword7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputPassword7"
        app:layout_constraintTop_toBottomOf="@+id/textLogin7"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/textLogin7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARENTS LOG IN"
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/inputEmail7"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/inputEmail7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/btnLogin7"
        android:layout_width="232dp"
        android:layout_height="49dp"
        android:layout_marginBottom="356dp"
        android:background="@drawable/inpuut_bg"
        android:text="LOG IN"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:backgroundTint="@color/design_default_color_primary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/inputPassword7"

        app:layout_constraintStart_toStartOf="@+id/inputPassword7"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword7"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/colorRed" />

    <TextView
        android:id="@+id/forgotPassword7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorBlack"
        android:text="Forgot Password?"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/register7"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="@+id/register7"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin7"
        app:layout_constraintVertical_bias="0.873"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/register7"
        android:layout_width="240dp"
        android:layout_height="31dp"
        android:text="Don't have an Account?"
        android:textColor="@color/colorBlack"
        android:textSize="19dp"

        app:layout_constraintBottom_toTopOf="@+id/forgotPassword7"
        app:layout_constraintEnd_toEndOf="@+id/progressBar7"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/progressBar7"
        app:layout_constraintTop_toBottomOf="@+id/progressBar7"
        app:layout_constraintVertical_bias="0.695"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/inputPassword7"
        android:layout_width="318dp"
        android:layout_height="68dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#050505"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail7"
        app:layout_constraintVertical_bias="0.059" />

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyle"
        android:layout_width="93dp"
        android:layout_height="103dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/forgotPassword7"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin7"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/btnLogin7"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin7"
        app:layout_constraintVertical_bias="0.335" />

</androidx.constraintlayout.widget.ConstraintLayout>